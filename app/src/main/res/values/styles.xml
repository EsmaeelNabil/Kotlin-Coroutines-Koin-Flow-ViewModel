<resources>

    <style name="FullScreen" parent="@style/Theme.MaterialComponents">
        // default background color
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="colorSecondaryVariant">@color/primaryDarkColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@android:color/white</item>

        <item name="android:textColorHint">#A09E9E</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:textAlignment">gravity</item>
        <item name="android:textDirection">locale</item>
    </style>


    <style name="allCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="topLeftBottomRight">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
    </style>

    <style name="bottomLeftCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">60dp</item>
    </style>

</resources>
